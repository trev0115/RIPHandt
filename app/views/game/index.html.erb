
<head>

  <div id="google">
      <% if current_user %>
        Signed in as <strong><%= current_user.name %></strong>!
        <%= link_to "Sign out", signout_path, id: "sign_out" %>
        <%= link_to "Tweet Score", tweet_path, id: "user_top_score" %>
      <% else %>
        <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %> 
      <% end %>
  </div>

</head>

<body>
  <h1 id="title">Asteroids</h1>
  
  <div id="gameDiv"></div>
  
  <div id="leaderboard_top10_content">
    <h1 id="leaderboard_title_top10">Leaderboard - Top 10:</h1>
    
    <table id="leaderboard_top10">
      <tr>
        <th>Name</th>
        <th>Score</th>
        <th colspan="2">&nbsp;</th>
      </tr>
      
      <% @top10.each do |score| %> 
        <tr>
          <td><%= score.user.name %></td>
          <td><%= score.score %></td> 
        </tr>
      <% end %>
    
    </table>
  </div>
  
  <div id="leaderboard_alltime_content">
    <h1 id="leaderboard_title_alltime">Leaderboard - Alltime:</h1>
    
    <table id="leaderboard_alltime">
      <tr>
        <th>Name</th>
        <th>Score</th>
        <th colspan="2">&nbsp;</th>
      </tr>
      
      <% @scores.order('score desc').each do |score| %> 
        <tr>
          <td><%= score.user.name %></td>
          <td><%= score.score %></td> 
        </tr>
      <% end %>
    
    </table>
  </div>
</body>
